<h1>人氣餐廳</h1>
<hr/>

<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <div class="row no-gutters">
        <div class="col-4">
          <img class="card-img" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">

        </div>
        <div class="col-8">

          <div class="card-body">
            <p class="card-text">
              <a href="/restaurants/{{this.id}}">
                {{this.name}}
              </a>
            </p>
            <span class="badge badge-secondary">{{this.countFavor}} 個收藏者</span>
            <p class="card-text">{{this.description}}</p>
            <div class="d-flex">
      
              {{#if this.isFavorited }}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
                  class="btn btn-danger">移除最愛</button></form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary">加到最愛</button>
              </form>
              {{/if}}
              {{#if this.isLike }}
              <form action="/like/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
                  class="btn btn-danger ml-2">Unlike</button></form>
              {{else}}
              <form action="/like/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary ml-2">Like</button>
              </form>
              {{/if}}
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
  {{/each}}
</div>