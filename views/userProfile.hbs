<div>
  <div class="row bg-white rounded mt-4">
    <div class="d-flex justify-content-center align-items-center col-6 col-lg-4 overflow-hidden m-1">
      <img src="{{thisUser.image}}" alt="User-photo" height="270px" width="270px" class="rounded-circle">
    </div>
    <div class="col-5 col-lg-7 mt-3">
      <h3> {{thisUser.name}} </h3>
      <p> {{thisUser.email}} </p>
      <div>
        <span class="font-weight-bold h4">
          {{totalCount.countComment}}
        </span>
        間已評論餐廳
      </div>
      <div>
        <span class="font-weight-bold h4">
          {{totalCount.countFavor}}
        </span>
        間收藏的餐廳
      </div>
      <div>
        <span class="font-weight-bold h4">
          {{totalCount.countFollower}}
        </span>
        follower (追隨者)
      </div>
      <div>
        <span class="font-weight-bold h3">
          {{totalCount.countFollowing}}
        </span>
        following (追蹤者)
      </div>

      {{#ifCond id thisUser.id}}
      <a href="/users/{{thisUser.id}}/edit" class="btn btn-primary mt-1">EDIT</a>
      {{/ifCond}}
    </div>
  </div>
  <div class="row">

    <div class="col-12 col-lg-4">
      <div class="card mt-4" >
        <div class="card-header">
          <span class="font-weight-bold h3">
            {{totalCount.countFollower}}
          </span>
          follower (追蹤者)
        </div>
        <div class="card-body d-flex justify-content-between justify-content-lg-start" style="min-height: 115px;">
          {{#each userFollower}}
          <a href="/users/{{this.id}}" class="ml-2">
            <img src="{{this.image}}" alt="" class="rounded shadow" style="width: 75px; height: 75px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card mt-4 ">
        <div class="card-header">
          <span class="font-weight-bold h3">
            {{totalCount.countFavor}}
          </span>
          間收藏的餐廳
        </div>
        <div class="card-body d-flex justify-content-between justify-content-lg-start" style="min-height: 115px;">
          {{#each userFavor}}
          <a href="/restaurants/{{this.id}}" class="ml-2">
            <img src="{{this.image}}" alt="" class="rounded shadow" style="width: 75px; height: 75px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="card mt-4 ">
        <div class="card-header">
          <span class="font-weight-bold h3">
            {{totalCount.countFollowing}}
          </span>
          following (追蹤者)
        </div>
        <div class="card-body d-flex justify-content-between justify-content-lg-start" style="min-height: 115px;">
          {{#each userFollowing}}
          <a href="/users/{{this.id}}" class="ml-2">
            <img src="{{this.image}}" alt="" class="rounded shadow" style="width: 75px; height: 75px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
    
    <div class="col-12 col-lg-8">
      <div class="card mt-4 ">
        <div class="card-header">
          <span class="font-weight-bold h3">
            {{totalCount.countComment}}
          </span>
          間已評論餐廳
        </div>
        <div class="card-body d-flex justify-content-between justify-content-lg-start" style="min-height: 115px;">
          {{#each restInfo}}
          <a href="/restaurants/{{this.id}}" class="ml-2">
            <img src="{{this.image}}" alt="" class="rounded shadow" style="width: 75px; height: 75px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>


  </div>
</div>